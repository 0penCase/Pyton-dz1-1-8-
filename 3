import random

number = random.randint(1, 10)
attempts = 3

print("Я загадало число від 1 до 10. Спробуйте вгадати!")

for attempt in range(attempts):
    guess = int(input("Введіть число: "))
    if guess > number:
        print("Менше")
    elif guess < number:
        print("Більше")
    else:
        print("Ви вгадали!")
        break
else:
    print(f"Ви програли! Загадане число було {number}.")
